<main class="registro">
    <header class="masthead">
        <div class="container boton_comuna">
                {{#each comuna}}
                    <a class="btn btn-info" href="/moteles/list/{{id}}">
                        {{comuna_nombre}}
                    </a>
                {{/each}}
        </div>
        <div class="container">
            <div class="row">
                {{#each moteles}}
                    <div class="col-xs-4 col-md-4 caja_motel">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="{{Web_Motel}}" target="_blank">
                                    <h3 class="card-title text-uppercase">
                                        {{Motel_Nombre}}
                                    </h3>
                                </a>
                                
                                
                                <a class="btn btn-info" href="/moteles/edit/{{id_motel}}">
                                    Editar
                                </a>
                                <a class="btn btn-info" href="/moteles/edit/{{id_motel}}">
                                    Habitaciones
                                </a>
                                <a class="btn btn-info" href="/moteles/edit/{{id_motel}}">
                                    Servicios
                                </a>
                                
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        
        <div class="modal fade" id="miModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title color_texto" id="miModal">{{Motel_Nombre}} aaa</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="color_texto"> {{Descripcion}}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

    </header>
</main>
